+			if (root_arg) {
+				char *root_arg_end = NULL;
+				char *blockno = NULL;
+				size_t cmdline_len;
+
+				root_arg_end = strchr(root_arg, ' ');
+				blockno = root_arg + strlen(search_prefix);

+				if (root_arg_end) {
+					*root_arg_end = '\0';
+				}
+
+				strlcat(boot_command_line, " ", COMMAND_LINE_SIZE);
+
+				cmdline_len = strlen(boot_command_line);
+				if (cmdline_len + append_rootblock_prefix_len + 1 <= COMMAND_LINE_SIZE) {

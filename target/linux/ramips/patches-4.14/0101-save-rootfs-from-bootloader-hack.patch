+				strlcat(boot_command_line, blockno, COMMAND_LINE_SIZE);
+
+				if (root_arg_end) {
+					*root_arg_end = ' ';
+				}
+			}
+		}
 		strlcpy(arcs_cmdline, boot_command_line, COMMAND_LINE_SIZE);
+	}
 
